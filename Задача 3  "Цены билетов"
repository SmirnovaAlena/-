#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int main() {
    int n;
    cin >> n;
    int a1, a3, a7;
    cin >> a1 >> a3 >> a7;
    vector<int> dp(n + 1, 0); 

    for (int i = 1; i <= n; ++i) {
        dp[i] = dp[i - 1] + a1; 

        if (i >= 3) {
            dp[i] = min(dp[i], dp[i - 3] + a3); 
        }

        if (i >= 7) {
            dp[i] = min(dp[i], dp[i - 7] + a7); 
        }
    }
    cout << dp[n];

    return 0;
}
